\NeedsTeXFormat{LaTeX2e}[1995/12/01]
\ProvidesPackage{sphinxcustom}[2018/10/13 package Sphinx supplemental
annotation]

\ProcessOptions\relax

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% TABLES
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Support top/mid/bottomrule
\RequirePackage{booktabs}

% Improve column auto-sizing
\setlength{\tymin}{6em}
\setlength{\tymax}{0.75\linewidth}

% Sphinx caption definition conflicts with the caption package
\renewcommand\sphinxcaption[2][\LTcapwidth]{%
  \caption{#2}%
}%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% TOC
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\addto\captionsenglish{\renewcommand{\contentsname}{Contents}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% FONTS
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Annotation: ``parameter'', ``postprocessor'' etc.
\protected\def\sphinxannotation#1{\emph{\small \color{gray} #1}}

% Don't use sans serif font for table headers
\renewcommand\sphinxstyletheadfamily\relax

% Color references instead of italicizing
\definecolor{linkblue}{RGB}{0,5,10}
\protected\def\sphinxcrossref#1{\color{linkblue}#1}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% PAGE STYLE
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\fancypagestyle{plain}{
  \renewcommand\headrulewidth{0pt}
  \fancyhf{}
  \fancyfoot[CE,CO]{\thepage}
}

\fancypagestyle{normal}{
  \renewcommand\headrulewidth{0pt}
  \fancyhf{}
  \fancyfoot[CE,CO]{\thepage}
}

