{
  "version": 3,
  "cmakeMinimumRequired": {"major": 3, "minor": 21, "patch": 0},
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Ubuntu default options (GCC)",
      "inherits": "default",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_SHARED_LIBS":     {"type": "BOOL", "value": "ON"},
        "CELERITAS_BUILD_DEMOS": {"type": "BOOL", "value": "ON"},
        "CELERITAS_BUILD_TESTS": {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_Doxygen": {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_MPI":     {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "OFF"},
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -pedantic -Werror -Wno-error=deprecated-declarations"
      }
    },
    {
      "name": ".mpi",
      "hidden": true,
      "description": "Options to enable MPI with Docker",
      "cacheVariables": {
        "CELERITAS_USE_MPI": {"type": "BOOL", "value": "ON"},
        "MPI_CXX_LINK_FLAGS": "-pthread",
        "MPIEXEC_PREFLAGS": "--allow-run-as-root"
      }
    },
    {
      "name": ".vecgeom",
      "hidden": true,
      "description": "Options to enable vecgeom on Ubuntu",
      "cacheVariables": {
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "ON"},
        "CMAKE_EXE_LINKER_FLAGS": "-Wl,--no-as-needed",
        "CMAKE_SHARED_LINKER_FLAGS": "-Wl,--no-as-needed"
      }
    },
    {
      "name": "full-novg",
      "description": "Build with debug, everything but VecGeom",
      "inherits": ["base", ".cuda-volta", ".mpi"],
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CELERITAS_BUILD_DEMOS": {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_Geant4":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_HepMC3":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_JSON":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_OpenMP":  {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_ROOT":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_SWIG":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_VecGeom": {"type": "BOOL", "value": "OFF"}
      }
    },
    {
      "name": "full-ndebug",
      "description": "Build everything but VecGeom in release mode",
      "inherits": ["full-novg", ".ndebug"]
    },
    {
      "name": "valgrind",
      "description": "Build without any dependencies but JSON/Googletest",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-valgrind",
      "cacheVariables": {
        "CELERITAS_USE_CUDA":    {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_Doxygen": {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_Geant4":  {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_HepMC3":  {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_JSON":    {"type": "BOOL", "value": "ON"},
        "CELERITAS_USE_OpenMP":  {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_ROOT":    {"type": "BOOL", "value": "OFF"},
        "CMAKE_BUILD_TYPE":      {"type": "STRING", "value": "RelWithDebInfo"},
        "MEMORYCHECK_COMMAND_OPTIONS": "--error-exitcode=1 --leak-check=full"
      }
    },
    {
      "name": "vecgeom",
      "description": "Build tests in debug only with vecgeom",
      "inherits": ["base", ".cuda-volta", ".vecgeom"],
      "binaryDir": "${sourceDir}/build-vg-debug",
      "cacheVariables": {
        "CELERITAS_BUILD_DEMOS": {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_OpenMP":  {"type": "BOOL", "value": "OFF"},
        "CELERITAS_USE_ROOT":    {"type": "BOOL", "value": "ON"}
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "nativeToolOptions": ["-k0"],
      "verbose": true,
      "jobs": 16
    },
    {
      "name": "full-novg",
      "configurePreset": "full-novg",
      "inherits": "base"
    },
    {
      "name": "full-ndebug",
      "configurePreset": "full-ndebug",
      "inherits": "base"
    },
    {
      "name": "valgrind",
      "configurePreset": "valgrind",
      "inherits": "base"
    },
    {
      "name": "vecgeom",
      "configurePreset": "vecgeom",
      "inherits": "base",
      "jobs": 8
    }
  ],
  "testPresets": [
    {
      "name": "base",
      "configurePreset": "base",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error", "stopOnFailure": false, "jobs": 16}
    },
    {
      "name": "full-novg",
      "configurePreset": "full-novg",
      "inherits": "base"
    },
    {
      "name": "full-ndebug",
      "configurePreset": "full-ndebug",
      "inherits": "base"
    },
    {
      "name": "valgrind",
      "configurePreset": "valgrind",
      "inherits": "base"
    },
    {
      "name": "vecgeom",
      "configurePreset": "vecgeom",
      "inherits": "base"
    }
  ]
}
