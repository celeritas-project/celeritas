[GEOMETRY]
global "global"
comp : matid
    "G4_STAINLESS-STEEL" 0
    "G4_Galactic" 1

!~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~!

[UNIVERSE=general global]
interior "World"

[UNIVERSE][SHAPE=box box]
widths 10000 10000 10000  ! note: units are in cm

[UNIVERSE][SHAPE=box World]
widths 120000 120000 120000

!~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~!

[UNIVERSE][CELL box]
comp "G4_STAINLESS-STEEL"
shapes box

[UNIVERSE][CELL World]
comp G4_Galactic
shapes World ~box
