[GEOMETRY]
global "global"
comp       : matid
    "G4_STAINLESS-STEEL" 0
    "G4_Galactic" 1

[UNIVERSE=general global]
interior "World"

!~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~!

[UNIVERSE][SHAPE=box box@0]
widths 20 20 4

[UNIVERSE][SHAPE=box box@1]
widths 20 20 4
translate 0 0 6

[UNIVERSE][SHAPE=box box@2]
widths 20 20 4
translate 0 0 12

[UNIVERSE][SHAPE=box box@3]
widths 20 20 4
translate 0 0 18

[UNIVERSE][SHAPE=box World]
widths 1000 1000 1000

!##############################################################################
! CELLS ("volumes")
!##############################################################################

[UNIVERSE][CELL box@0]
comp "G4_STAINLESS-STEEL"
shapes box@0

[UNIVERSE][CELL box@1]
comp "G4_STAINLESS-STEEL"
shapes box@1

[UNIVERSE][CELL box@2]
comp "G4_STAINLESS-STEEL"
shapes box@2

[UNIVERSE][CELL box@3]
comp "G4_STAINLESS-STEEL"
shapes box@3

[UNIVERSE][CELL World]
comp G4_Galactic
shapes World ~box@0 ~box@1 ~box@2 ~box@3
